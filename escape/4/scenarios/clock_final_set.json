{
  "initialWaitMs": 400,
  "steps": [
    { "type": "click", "selector": ".hotspot[aria-label=\"扉\"]" },
    { "type": "wait", "ms": 80 },
    { "type": "fill", "selector": ".modal .field input[placeholder=\"814362\"]", "value": "814362" },
    { "type": "click", "selector": "button:has-text(\"入力\")" },
    { "type": "wait", "ms": 80 },
    { "type": "capture", "name": "door-unlocked-before-clock" },
    { "type": "assert", "path": "flags.doorUnlocked", "equals": true },
    { "type": "click", "selector": ".modal .ghost-btn:has-text(\"閉じる\")" },
    { "type": "wait", "ms": 80 },
    { "type": "click", "selector": ".hotspot[aria-label=\"時計\"]" },
    { "type": "wait", "ms": 80 },
    { "type": "capture", "name": "clock-opened" },
    { "type": "fill", "selector": ".modal input[type=\"number\"]", "index": 0, "value": "6" },
    { "type": "fill", "selector": ".modal input[type=\"number\"]", "index": 1, "value": "20" },
    { "type": "click", "selector": "button:has-text(\"合わせる\")" },
    { "type": "wait", "ms": 80 },
    { "type": "capture", "name": "clock-final-set" },
    { "type": "assert", "path": "flags.clockFinalSet", "equals": true },
    { "type": "assert", "path": "modalTitle", "equals": "脱出成功" }
  ]
}
