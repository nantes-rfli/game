{
  "initialWaitMs": 400,
  "steps": [
    { "type": "click", "selector": ".hotspot[aria-label=\"引き出し棚\"]" },
    { "type": "wait", "ms": 80 },
    { "type": "capture", "name": "drawers-opened" },
    { "type": "click", "selector": ".cell:has(.id:has-text(\"08\"))" },
    { "type": "wait", "ms": 80 },
    { "type": "capture", "name": "drawer08-detail" },
    { "type": "fill", "selector": ".modal .field input[inputmode=\"numeric\"]", "value": "20" },
    { "type": "click", "selector": "button:has-text(\"開ける\")" },
    { "type": "wait", "ms": 80 },
    { "type": "capture", "name": "drawer08-unlocked" },
    { "type": "assert", "path": "flags.audioDecoded", "equals": true },
    { "type": "assert", "path": "drawers.7.opened", "equals": true }
  ]
}
