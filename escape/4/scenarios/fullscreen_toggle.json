{
  "initialWaitMs": 400,
  "steps": [
    { "type": "capture", "name": "fullscreen-initial" },
    { "type": "assert", "path": "fullscreen", "equals": false },

    { "type": "click", "selector": "#fullscreen-toggle" },
    { "type": "wait", "ms": 120 },
    { "type": "capture", "name": "fullscreen-on-button" },
    { "type": "assert", "path": "fullscreen", "equals": true },

    { "type": "press", "key": "Escape" },
    { "type": "wait", "ms": 120 },
    { "type": "capture", "name": "fullscreen-off-esc" },
    { "type": "assert", "path": "fullscreen", "equals": false },

    { "type": "press", "key": "f" },
    { "type": "wait", "ms": 120 },
    { "type": "capture", "name": "fullscreen-on-key" },
    { "type": "assert", "path": "fullscreen", "equals": true },

    { "type": "press", "key": "f" },
    { "type": "wait", "ms": 120 },
    { "type": "capture", "name": "fullscreen-off-key" },
    { "type": "assert", "path": "fullscreen", "equals": false }
  ]
}
