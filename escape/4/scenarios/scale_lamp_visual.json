{
  "initialWaitMs": 400,
  "steps": [
    { "type": "capture", "name": "main-no-hotspot-icons" },

    { "type": "click", "selector": ".hotspot[aria-label=\"秤\"]" },
    { "type": "wait", "ms": 80 },
    { "type": "capture", "name": "scale-opened" },
    { "type": "assert", "path": "modalTitle", "equals": "秤" },
    { "type": "click", "selector": ".modal .ghost-btn:has-text(\"閉じる\")" },
    { "type": "wait", "ms": 80 },

    { "type": "click", "selector": ".hotspot[aria-label=\"電気スタンド\"]" },
    { "type": "wait", "ms": 80 },
    { "type": "capture", "name": "lamp-opened-off" },
    { "type": "assert", "path": "modalTitle", "equals": "電気スタンド" },
    { "type": "assert", "path": "flags.powerOn", "equals": false }
  ]
}
